<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dip" >

    <!-- Owner Name -->

    <TextView
        android:id="@+id/txtOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="15dip"
        android:textStyle="bold" />

    <!-- Total Certificates-->

    <TextView
        android:id="@+id/txtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtOwnerName"
        android:layout_marginLeft="20dip"
        android:textSize="10dip" />

    <!-- Device Id -->

    <TextView
        android:id="@+id/lblOwnerDeviceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txtCount"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@id/txtCount"
        android:textSize="10dip" />
    
     <!-- Total Private Keys-->

    <TextView
        android:id="@+id/txtCountKeys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtCount"
        android:layout_marginLeft="20dip"
        android:textSize="10dip" />

</RelativeLayout>