<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutDetailCertificateBasicInformation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <!-- Certificate Serial Number -->

        <TextView
            android:id="@+id/lblCertificateSerialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:text="@string/lblCertificateSerialNumber"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/txtCertificateSerialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/lblCertificateSerialNumber"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@id/lblCertificateSerialNumber"
            android:textSize="15dip"
            android:textStyle="bold" />

        <!-- Certificate Subject Name -->

        <TextView
            android:id="@+id/lblCertificateSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lblCertificateSerialNumber"
            android:layout_marginLeft="20dip"
            android:text="@string/lblCertificateSubjectName"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/txtCertificateSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lblCertificateSubjectName"
            android:layout_marginLeft="30dip"
            android:singleLine="false"
            android:textSize="15dip"
            android:textStyle="bold" />

        <!-- Certificate DB Status -->

        <TextView
            android:id="@+id/lblCertificateDBStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtCertificateSubjectName"
            android:layout_marginLeft="20dip"
            android:text="@string/lblCertificateDBStatus"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/txtCertificateDBStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lblCertificateDBStatus"
            android:layout_marginLeft="30dip"
            android:singleLine="false"
            android:textSize="15dip"
            android:textStyle="bold" />

        <!-- DB Status Last Update -->

        <TextView
            android:id="@+id/lblCertificateDBStatusLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtCertificateDBStatus"
            android:layout_marginLeft="20dip"
            android:text="@string/lblCertificateDBStatusLastUpdate"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/txtCertificateDBStatusLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lblCertificateDBStatusLastUpdate"
            android:layout_marginLeft="30dip"
            android:singleLine="false"
            android:textSize="15dip"
            android:textStyle="bold" />

        <!-- CA Subject Name -->

        <TextView
            android:id="@+id/lblCertificateCASubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtCertificateDBStatusLastUpdate"
            android:layout_marginLeft="20dip"
            android:text="@string/lblCertificateCASubjectName"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/txtCertificateCASubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lblCertificateCASubjectName"
            android:layout_marginLeft="30dip"
            android:singleLine="false"
            android:textSize="15dip"
            android:textStyle="bold" />

        <!-- Trust Level -->

        <TextView
            android:id="@+id/lblCertificateTrustLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtCertificateCASubjectName"
            android:layout_marginLeft="20dip"
            android:text="@string/lblCertificateTrustLevel"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/txtCertificateTrustLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/lblCertificateTrustLevel"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@id/lblCertificateTrustLevel"
            android:singleLine="false"
            android:textSize="15dip"
            android:textStyle="bold" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layoutSeekCertificateTrustLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtCertificateTrustLevel"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:gravity="center" >

            <SeekBar
                android:id="@+id/seekCertificateTrustLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:max="200"
                android:progressDrawable="@drawable/seekbar_layout"
                android:thumb="@drawable/seekbar_progress_thumb" >
            </SeekBar>

            <ImageView
                android:id="@+id/imgCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekCertificateTrustLevel"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/action_details"
                android:src="@drawable/center" />

            <ImageView
                android:id="@+id/imgHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekCertificateTrustLevel"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/action_details"
                android:scaleType="fitXY"
                android:src="@drawable/horizontal" />

            <ImageView
                android:id="@+id/imgBadTrust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/seekCertificateTrustLevel"
                android:contentDescription="@string/action_details"
                android:src="@drawable/ic_action_trust_null" />

            <ImageView
                android:id="@+id/imgGoodTrust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/seekCertificateTrustLevel"
                android:contentDescription="@string/action_details"
                android:src="@drawable/ic_action_trust_complete" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lblImgSeeMoreDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutSeekCertificateTrustLevel"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:drawableLeft="@drawable/ic_action_see_more"
            android:gravity="center"
            android:text="@string/lblSeeDetails"
            android:textSize="15dip"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>